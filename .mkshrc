# [EXPORTS]
\: "${MKSH:=$(\\builtin whence -p mksh)}${MKSH:=/bin/mksh}"
\\builtin export MKSH
\\builtin export SHELL=$MKSH MANWIDTH=80 LESSHISTFILE=-
\\builtin export HISTSIZE=500 HISTFILE=~/.mksh_history

# Return to $HOME if not already there
[ "$PWD" = "$HOME" ] || cd "$HOME"

# Trying to make java gui programs to run (it bugs for not recognizing WM name)
\\builtin export _JAVA_AWT_WM_NONREPARENTING=1

# [PROMPTS]
\\builtin export PS1='$(prompt) '
\\builtin export PS2=">> "
\\builtin export PS3=">>> "

prompt () {
    tput setaf 50
    echo -en "[$(basename ${PWD})]\U1557"
    #echo -e "\U1557"
    tput sgr0
}

# --Functions
v () { nvim "$@"; }
ss () { source "$HOME/.mkshrc" ; }
st () { git status "$@"; }
add () { git add "$@"; }
gdf () { git diff; }
cmt () { git commit -m "${@}"; }
etc () { cd $(find /etc -maxdepth 2 -type d | fzy -l 20) ; }
gf () { cd $(find $HOME/projects  -maxdepth 2 -type d | fzy -l 20) ; }

# [ALIAS]
# --System
\\builtin alias !!='sudo mksh -c "$(\\builtin fc -ln -1)"'
\\builtin alias ..='cd ..'
\\builtin alias ls='ls -F --color='auto' --group-directories-first'
\\builtin alias la='ls -A'
\\builtin alias ll='ls -o'
\\builtin alias lo='ls -Ago'
\\builtin alias c='cat' 
\\builtin alias cc='sudo cat'
\\builtin alias df='df -h' dt='df -hT'
\\builtin alias lb='lsblk' lba='lsblk -alp' lbb='lsblk -lp'
\\builtin alias pki='sudo xbps-install'
\\builtin alias pkr='sudo xbps-remove'
\\builtin alias pkq='xbps-query'
\\builtin alias pkc='sudo xbps-reconfigure'
# --Programming
\\builtin alias gb='[[ -e $HOME/bin/ ]] && cd $HOME/bin/'
\\builtin alias gc='[[ -e $HOME/.config/ ]] && cd $HOME/.config/'
\\builtin alias ghci='ghci -ignore-dot-ghci -flocal-ghci-history -fghci-hist-size=100'
\\builtin alias poly='poly' pl='poly --use'
\\builtin alias pyt='python -q'

