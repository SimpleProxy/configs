bind '^J'=newline
bind '^K'=kill-to-eol
bind '^L'=clear-screen
bind '^M'=newline
bind '^N'=down-history
bind '^O'=newline-and-next
bind '^P'=up-history
bind '^R'=search-history
bind '^T'=transpose-chars
bind '^U'=kill-line
bind '^V'=complete
bind '^W'=delete-word-backward
bind '^X'=complete-command
bind '^Y'=yank
