# [EXPORTS]
\: "${MKSH:=$(\\builtin whence -p mksh)}${MKSH:=/bin/mksh}"
\\builtin export MKSH
\\builtin export SHELL=$MKSH MANWIDTH=80 LESSHISTFILE=-
\\builtin export HISTSIZE=5000 HISTFILE=~/.mksh_history


# [PROMPTS]
#\\builtin export PS1='$(basename ${PWD})$(tput setaf 50) ~$(echo -e "\U1557")$(tput sgr0) ' PS2=">" PS3=">>"
\\builtin export PS1='$(prompt) '
\\builtin export PS2=">> "
\\builtin export PS3=">>> "

# --Functions
prompt () {
    tput setaf 50
    echo -en "$(basename ${PWD}) \U1557"
    #echo -e "\U1557"
    tput sgr0
}

v () { nvim "$@"; }
st () { git status "$@"; }
add () { git add "$@"; }
commit () { git commit -m "${@}"; }

# [ALIAS]
# --System
\\builtin alias ls='ls -F --color='auto' --group-directories-first'
\\builtin alias la='ls -A'
\\builtin alias ll='ls -lG'
\\builtin alias lo='ls -Alo'
\\builtin alias c='cat' 
\\builtin alias cc='sudo cat'
\\builtin alias df='df -h' dt='df -hT'
\\builtin alias lb='lsblk' lba='lsblk -alp' lbb='lsblk -lp'
\\builtin alias xbps='sudo xbps-install'
\\builtin alias xrm='sudo xbps-remove'
\\builtin alias query='xbps-query'
\\builtin alias recall='sudo xbps-reconfigure'
# --Programming
\\builtin alias gc='[[ -e $HOME/.config/ ]] && cd $HOME/.config/'
\\builtin alias ge='[[ -e $HOME/projects/erlang ]] && cd $HOME/projects/erlang'
\\builtin alias gh='[[ -e $HOME/projects/haskell ]] && cd $HOME/projects/haskell'
\\builtin alias gp='[[ -e $HOME/projects/python ]] && cd $HOME/projects/python'
#\\builtin alias v='nvim' vv='sudo nvim' vw='nview'
\\builtin alias ghci='ghci -ignore-dot-ghci -flocal-ghci-history -fghci-hist-size=100'
\\builtin alias poly='poly' pl='poly --use'

